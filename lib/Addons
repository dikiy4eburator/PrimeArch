#!/bin/bash


cd /tmp
curl -O https://aur.archlinux.org/cgit/aur.git/snapshot/package-query.tar.gz
tar -xvzf package-query.tar.gz
cd package-query
makepkg -si

cd /tmp
curl -O https://aur.archlinux.org/cgit/aur.git/snapshot/yaourt.tar.gz
tar -xvzf yaourt.tar.gz
cd yaourt
makepkg -si

# Install some cosmetiks
yaourt -S --noconfirm i3-gaps
yaourt -S --noconfirm neofetch-git
yaourt -S --noconfirm pamac-aur
yaourt -S --noconfirm polybar-git
yaourt -S --noconfirm vertex-themes
yaourt -S --noconfirm vertex-icons-git
yaourt -S --noconfirm gitkraken
yaourt -S --noconfirm etcher
exit
