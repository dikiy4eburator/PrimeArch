#!/bin/bash

clear
clear

# ////////////////////////////////////////////////////////////
# //////////////////    VARIABELS DEFINITION    //////////////
# ////////////////////////////////////////////////////////////

# set Variabels
BoxWhith=70
consol_X=$(tput cols)
consol_Y=$(tput lines)
BoxStartX=$(( ($consol_X - $BoxWhith)/2  ))
BoxStartY=3

working_dir=$(pwd)


# includes
source $working_dir/lib/funktions/auto_partition
source $working_dir/lib/funktions/manual_partition
source $working_dir/lib/funktions/menu_generator
source $working_dir/lib/funktions/MKSWAP

source $working_dir/lib/funktions/install_pacages
source $working_dir/lib/funktions/time_setup
source $working_dir/lib/funktions/language_install
source $working_dir/lib/funktions/user_operations

source $working_dir/lib/zfs_install
source $working_dir/lib/normal_install


# /////////////////////////////////////////////////////////////
# //////////////////    START INSTALATION   ///////////////////
# /////////////////////////////////////////////////////////////



# language select
#===============================================================================

dialog \
--backtitle "PrimeArch Installer" \
--title "Languge" \
--begin $BoxStartY $BoxStartX \
--menu "\nSelect your languge" 12 $BoxWhith 3 \
	1 English \
	2 German \
	3 Russian \
	2>/tmp/language

case $(</tmp/language) in
		1 )
			loadkeys en ;;
		2 )
			loadkeys de ;;
		3 )
			loadkeys ru ;;
esac
#===============================================================================



#Set user
#===============================================================================
dialog \
--backtitle "PrimeArch Installer" \
--begin $BoxStartY $BoxStartX \
--inputbox '\nEnter the name for the new user' 9 $BoxWhith \
	2>/tmp/user_name

dialog \
--backtitle "PrimeArch Installer" \
--begin $BoxStartY $BoxStartX \
--title "User Password" \
--insecure \
--passwordbox "\nEnter the Password for $(</tmp/user_name)" 9 $BoxWhith \
	2>/tmp/user_pw
#===============================================================================



#Set ROOT
#===============================================================================
dialog \
--backtitle "PrimeArch Installer" \
--title "ROOT accaunt" \
--begin $BoxStartY $BoxStartX \
--menu "\nActivate ROOT accaunt?" 11 $BoxWhith 2 \
	1 yes \
	2 no \
	2>/tmp/root_status

case $(</tmp/root_status) in
		1 )
			dialog \
			--backtitle 'PrimeArch Installer' \
			--begin $BoxStartY $BoxStartX \
			--title 'ROOT Password' \
			--insecure \
			--passwordbox '\nEnter the ROOT Password' 9 $BoxWhith \
				2>/tmp/root_pw
			;;

		2 )
			;;
esac
#===============================================================================



# SET TIME
#====================================================================================
# SET TIMEZONE
ls -l /usr/share/zoneinfo/ | awk '{ if($1 ~ /d/ && $9 !~ /posix/ && $9 !~ /right/ && $9 !~ /Etc/) print $9 " " ++s}' > /tmp/time_region_in

dialog \
--backtitle "PrimeArch Installer" \
--title "Time setup" \
--begin $BoxStartY $BoxStartX \
--menu "\nSelect your regeon" 20 $BoxWhith 20 \
	$( awk '{ print }' < /tmp/time_region_in ) \
	2>/tmp/time_region_out


# SET SUBTIMEZONE
ls -l /usr/share/zoneinfo/$(</tmp/time_region_out) | awk 'NR>=2{ print $9 " " ++s }' > /tmp/time_subregion_in

dialog \
--backtitle "PrimeArch Installer" \
--title "Time setup" \
--begin $BoxStartY $BoxStartX \
--menu "\nSelect your sub regeon" 20 $BoxWhith 20 \
	$( awk '{ print }' < /tmp/time_subregion_in ) \
	2>/tmp/time_subregion_out


# SET TIMEFORMAT
dialog \
--backtitle "PrimeArch Installer" \
--title "Time setup" \
--begin $BoxStartY $BoxStartX \
--menu "\nSelect the time format" 11 $BoxWhith 2 \
	utc         1 \
	localtime   2 \
	2>/tmp/time_format
#====================================================================================



# SET HOSTNAME
#===============================================================================
dialog \
--backtitle "PrimeArch Installer" \
--begin $BoxStartY $BoxStartX \
--title "Hostname" \
--inputbox '\nEnter the Hostnamen' 9 $BoxWhith \
	2>/tmp/hostname
#===============================================================================



# SET DESKTOP
#===============================================================================
dialog \
--backtitle "PrimeArch" \
--begin $BoxStartY $BoxStartX \
--title "Desktop" \
--menu "\nChoose you Desktop" 15 $BoxWhith 6 \
	i3 				1 \
	cinnamon		2 \
	mate 			3 \
	xfce 			4 \
	gnome 			5 \
	"No Desktop" 	0 \
	2>/tmp/desktop
#===============================================================================



# SET GRAFIKDRIWER
#===============================================================================
dialog \
--backtitle "PrimeArch" \
--begin $BoxStartY $BoxStartX \
--title "Video driver" \
--menu "\nChoose you Video driver" 15 $BoxWhith 6 \
	Virtualbox 			1 \
	Nvidia 				2 \
	Nouveau 			3 \
	ATI 				4 \
	Intel 				5 \
	"No Video driver" 	6 \
	2>/tmp/grafik_treiber
#===============================================================================



# SELECT INSTALL MODE
#===============================================================================
dialog \
--backtitle "PrimeArch Installer" \
--title "Installation Mode" \
--begin $BoxStartY $BoxStartX \
--menu "\nWhat kind of installation you want?" 11 $BoxWhith 2 \
	1 "Normal installation" \
	2 "ROOT ON ZFS" \
	2>/tmp/installation_mod

case $(</tmp/installation_mod) in
	1 )
		# Partitionierung AUTO MANUEL
		#===============================================================================
		dialog \
		--backtitle "PrimeArch Installer" \
		--title "Partitioning" \
		--begin $BoxStartY $BoxStartX \
		--menu "\nHow do you want to partition you hard drive" 11 $BoxWhith 2 \
			Automatic	1 \
			Manual		2 \
			2>/tmp/partitionierung
		
		case $(</tmp/partitionierung) in
			Automatic)
				# Generate HDD selection menu
				#===============================================================================
				f_gen_hdd_menu
				
				# EXTRA HOME PARTITION DIALOG
				#===============================================================================
				dialog \
				--backtitle "PrimeArch Installer" \
				--begin $BoxStartY $BoxStartX \
				--title "HOME" \
				--yesno '\nDo you want an extra Home partition?' 7 $BoxWhith \

				if [[ $? -eq 0 ]];
					then
						echo "ja" > /tmp/extrahome

						# ROOT size dialog
						dialog \
						--backtitle "PrimeArch Installer" \
						--begin $BoxStartY $BoxStartX \
						--title "ROOT" \
						--inputbox '\nROOT partition size (in Gb)' 9 $BoxWhith \
							2>/tmp/root_size

					else
						echo "nein" > /tmp/extrahome
				fi
				
				# SWAP size dialog
				#===============================================================================
				dialog \
				--backtitle "PrimeArch Installer" \
				--begin $BoxStartY $BoxStartX \
				--title "SWAP" \
				--inputbox '\nSWAP partition size (in MB)' 9 $BoxWhith \
					2>/tmp/swap_size
				
				;;

			Manual)
				f_manual_partition ;;
		esac
		;;

	2 )
		#Prepare Disklist
		#===============================================================================
		ls -l /dev/disk/by-id/  > /tmp/hdlist

		dialog \
		--backtitle "PrimeArch" \
		--begin $BoxStartY $BoxStartX \
		--infobox "You have to select atleast 2 hard drives.\nUse the SPACE-buton to select them." 5 $BoxWhith \
		--and-widget \
		--begin $(($BoxStartY+7)) $BoxStartX \
		--title "HDD Selektion" \
		--separate-output \
		--checklist "\nShoose the hard drives for the ZPool" 16 $BoxWhith 7 \
			$(awk 'NR>=2{ if($9 !~ /part/ ) print $9" "$11" " "off"}' < /tmp/hdlist) \
			2>/tmp/hdd_by_id
		

		# select raidmod
		#===============================================================================
		dialog \
		--backtitle "PrimeArch" \
		--begin $BoxStartY $BoxStartX \
		--title "RAID mode" \
		--menu "\nShoose the RAID mode for the ZPool" 12 $BoxWhith 3 \
			stripe 	"2+ harddrives" \
			mirror	"2+ harddrives" \
			raidz 	"2+ harddrives" \
			2>/tmp/raid
		
		;;
esac
#===============================================================================



# START INSTALLATION
#===============================================================================
case $(</tmp/installation_mod) in
	1 )
		f_normal ;;
	2 )
		f_zfs ;;
esac
#===============================================================================



#===============================================================================
echo ===============================================================================
echo -e "Setup is done.\nPlease restart the computer"
echo ===============================================================================
#===============================================================================

exit
